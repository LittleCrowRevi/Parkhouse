<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
		Width="400" Height="500" MinWidth="400" MinHeight="500"
        x:Class="Parkhouse.MainWindow"
        Title="Parkhouse">
	<StackPanel>
		<Border Margin="20"
		  CornerRadius="5"
		  Background="LightBlue">
			<TextBlock Margin="5"
			   FontSize="24"
			   HorizontalAlignment="Center"
			   Text="Parkhaus Vence">
			</TextBlock>
		</Border>
		<Viewbox>
			<StackPanel >
				
				<Border CornerRadius="5"
						Margin="50 0 50 0"
						Background="AliceBlue">
					<Grid ShowGridLines="False" Margin="5"
						  ColumnDefinitions="Auto, *"
						  RowDefinitions="20">
						<Label HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0">Freie Parkplätze:</Label>
						<TextBlock HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1" Margin=" 3" Name="freieParkplätze">10</TextBlock>
					</Grid>			
				</Border>
				<Button Click="ParkplatzZuteilen" Margin="0 10" HorizontalAlignment="Center">Parkplatz</Button>
			</StackPanel>
		</Viewbox>
	</StackPanel>
</Window>

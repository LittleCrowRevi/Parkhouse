<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
		Width="400" Height="500" MinWidth="400" MinHeight="500"
        x:Class="Parkhouse.ParkplatzWindow"
        Title="Parkplatz Registrierung">
	<StackPanel>
		<Border Margin="20"
		  CornerRadius="5"
		  Background="LightBlue">
			<TextBlock Margin="5"
			   FontSize="24"
			   HorizontalAlignment="Center"
			   Text="Parkhaus Vence">
			</TextBlock>
		</Border>
		<Viewbox>
			<Border CornerRadius="5"
					Margin="20 20 24 0"
					HorizontalAlignment="Center" VerticalAlignment="Center"
					Background="AliceBlue">
				<Grid ShowGridLines="False" Margin="5"
					  ColumnDefinitions="125, 130"
					  RowDefinitions="20"
					  HorizontalAlignment="Center">
					<TextBlock Grid.Row="0" Grid.Column="0" Margin="5 6 0 0">Kennzeichen :</TextBlock>
					<TextBox Grid.Row="0" Grid.Column="1" Margin="-15 5 10 5" MinHeight="25" TextAlignment="Center" MaxLength="10" Padding="0 3 0 0" Name="kennzeichen" TextWrapping="Wrap"></TextBox>
				</Grid>
			</Border>
		</Viewbox>
		<Viewbox Stretch="Uniform" Margin="35 0 40 0">
			<Button Click="reservierParkplatz" HorizontalAlignment="Center" Margin="20 15" >Parkplatz Reservieren</Button>
		</Viewbox>

	</StackPanel>
</Window>
